<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/authVerificationEmptyFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.dai.pandyapk.ui.loginuser.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment" />
    </fragment>
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.dai.pandyapk.ui.principalmenu.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_dashboardFragment_to_notesListFragment"
            app:destination="@id/notesListFragment" />
    </fragment>
    <fragment
        android:id="@+id/authVerificationEmptyFragment"
        android:name="com.dai.pandyapk.ui.loginuser.AuthVerificationEmptyFragment"
        android:label="fragment_auth_verification_empty"
        tools:layout="@layout/fragment_auth_verification_empty" >
        <action
            android:id="@+id/action_authVerificationEmptyFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_authVerificationEmptyFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment" />
    </fragment>
    <fragment
        android:id="@+id/notesListFragment"
        android:name="com.dai.pandyapk.ui.notes.NotesListFragment"
        android:label="fragment_notes_list"
        tools:layout="@layout/fragment_notes_list" >
        <action
            android:id="@+id/action_notesListFragment_to_noteCreatorFragment"
            app:destination="@id/noteCreatorFragment" />
    </fragment>
    <fragment
        android:id="@+id/noteCreatorFragment"
        android:name="com.dai.pandyapk.ui.notes.NoteCreatorFragment"
        android:label="fragment_note_creator"
        tools:layout="@layout/fragment_note_creator" />
</navigation>