<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_photo"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:src="@drawable/icon_poke2" />

    <LinearLayout
        android:id="@+id/item_note"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_note_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nota Name"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_note_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description of the note, Description of the note, Description of the note" />

        <TextView
            android:id="@+id/txt_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dd/mm/yy hh:mm"
            />
    </LinearLayout>

</LinearLayout>